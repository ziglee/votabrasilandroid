<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="1 - Crimes Hediondos"
	    android:background="@drawable/red_grad"
	    android:padding="5dp"
	    android:textSize="15dp"
	    android:textStyle="bold"
	    android:textColor="#FFF"
	    android:id="@+id/title_txt"
	/>
	<LinearLayout 
		android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="3dp"
	    android:background="#666">
		<TextView 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:text="Você é a favor do projeto que inclui os atos de corrupção na Lei dos Crimes Hediondos, que aplica punições mais severas aos condenados?"
		    android:background="@drawable/box"
		    android:padding="10dp"
		    android:textSize="16dp"
		    android:id="@+id/content_txt"
		    android:layout_margin="10dp"
		/>
	</LinearLayout>
	<LinearLayout 
		android:id="@+id/result_layout"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="#666">
		<FrameLayout 
			android:layout_width="fill_parent"
			android:layout_height="85dp"
			android:layout_gravity="center"
			android:layout_margin="10dp">
			<LinearLayout 
				android:layout_width="fill_parent"
			    android:layout_height="fill_parent">
			    <LinearLayout 
			    	android:id="@+id/yes_bar"
			    	android:layout_height="fill_parent"
			    	android:layout_width="wrap_content"
		    		android:background="#AEFFAE"
		    		android:layout_weight="32.5">
		    	</LinearLayout>
			    <LinearLayout
			    	android:id="@+id/no_bar" 
			    	android:layout_height="fill_parent"
			    	android:layout_width="wrap_content"
		    		android:background="#FFAEAE"
		    		android:layout_weight="64.8">
		    	</LinearLayout>
			</LinearLayout>
			<LinearLayout 
				android:layout_width="fill_parent"
			    android:layout_height="85dp"
			    android:orientation="horizontal">
			    <LinearLayout 
			    	android:layout_height="fill_parent"
			    	android:layout_width="wrap_content"
			    	android:layout_weight="1"
			    	android:orientation="vertical"
			    	android:gravity="center">
			    	<TextView 
			    		android:id="@+id/yes_percentage"
			    		android:layout_width="fill_parent"
			    		android:layout_height="wrap_content"
			    		android:layout_weight="2"
			    		android:text="35,2%"
			    		android:gravity="center"
			    		android:textSize="40dp"
			    	/>
			    	<TextView 
			    		android:layout_width="fill_parent"
			    		android:layout_height="wrap_content"
			    		android:layout_weight="1"
			    		android:textStyle="bold"
			    		android:text="Sim"
			    		android:gravity="center"
			    	/>
		    	</LinearLayout>
			    <LinearLayout 
			    	android:layout_height="fill_parent"
			    	android:layout_width="wrap_content"
			    	android:layout_weight="1"
			    	android:orientation="vertical"
			    	android:gravity="center">
			    	<TextView
			    		android:id="@+id/no_percentage" 
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_weight="2"
			    		android:text="64,8%"
			    		android:gravity="center"
			    		android:textSize="40dp"
			    	/>
			    	<TextView 
			    		android:layout_width="fill_parent"
			    		android:layout_height="wrap_content"
			    		android:layout_weight="1"
			    		android:textStyle="bold"
			    		android:text="Não"
			    		android:gravity="center"
			    	/>
		    	</LinearLayout>
			</LinearLayout>
		</FrameLayout>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/box"
			android:orientation="vertical"
			android:layout_margin="10dp">
			<TextView 
				android:id="@+id/you_voted_txt"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="Você votou 'Sim'"
	    		android:gravity="center"
	    		android:textSize="20dp"
			/>
			<TextView
				android:id="@+id/total_votes_txt" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="1297 votos"
	    		android:gravity="center"
	    		android:textSize="20dp"
			/>
		</LinearLayout>
	</LinearLayout>
    <LinearLayout 
    	android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    <LinearLayout 
    	android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    	<Button 
	    		android:id="@+id/yes_btn"
			    android:layout_width="wrap_content" 
			    android:layout_height="fill_parent"
			    android:layout_margin="10dp" 
			    android:text="Sim"
			    android:layout_weight="1"
		    />
			<Button 
	    		android:id="@+id/no_btn"
			    android:layout_width="wrap_content" 
			    android:layout_height="fill_parent"
			    android:layout_margin="10dp" 
			    android:text="Não"
			    android:layout_weight="1"
		    />
		</LinearLayout>
		<Button 
    		android:id="@+id/next_btn"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:layout_margin="10dp" 
		    android:text="Proxima"
		    android:layout_weight="1"
		    android:visibility="gone"
	    />
    </LinearLayout>
</LinearLayout>
