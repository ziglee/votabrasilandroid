<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <include layout="@layout/header" />
    
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:layout_weight="1">
	    
	    <TextView 
	    	android:id="@+id/intro_txt"
	    	android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:layout_marginLeft="20dp"
		    android:layout_marginRight="20dp"
		    android:layout_marginBottom="10dp"
		    android:gravity="center"
		    android:text="Veja os assuntos que mais causam polêmicas e discussões e deixe a sua opinião."
		    android:textSize="17dp"
		    android:textColor="#666"/>
		    
	    <LinearLayout
	    	android:id="@+id/vote_btn" 
	    	android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="70dp"
		    android:background="@drawable/gray_grad"
		    android:gravity="center">
		    <TextView 
		    	android:id="@+id/vote_label"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:text="VOTAR"
		    	android:textSize="24dp"
		    	android:textColor="#333"/>
	    </LinearLayout>
	    
	    <LinearLayout
	    	android:id="@+id/list_btn" 
	    	android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="70dp"
		    android:layout_marginTop="2dp"
		    android:background="@drawable/gray_grad"
		    android:gravity="center">
		    <TextView 
		    	android:id="@+id/list_label"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:text="VER ENQUETES"
		    	android:textSize="24dp"
		    	android:textColor="#333"/>
	    </LinearLayout>
	    
	    <TextView 
	    	android:id="@+id/count_txt"
	    	android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:layout_marginBottom="15dp"
		    android:gravity="center"
		    android:text="Computando votos..."
		    android:textSize="16dp"
		    android:textColor="#666"/>
	</LinearLayout>
	
	<LinearLayout 
	   android:id="@+id/advertising_banner_view"
	   android:layout_height="50dp"
	   android:layout_width="fill_parent"
	   android:gravity="right"/>
</LinearLayout>