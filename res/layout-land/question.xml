<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
	<ScrollView 
		android:layout_width="250dp"
	    android:layout_height="fill_parent">
		<LinearLayout 
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent">
		    
		    <include layout="@layout/header" />
		    
			<FrameLayout 
				android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1">
			    <ImageView 
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:src="@drawable/question_plate"
			    	android:scaleType="fitCenter"
			    	android:adjustViewBounds="true"
			    	android:layout_gravity="bottom|right"
			    	/>
				<TextView
					android:id="@+id/content_txt" 
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:minHeight="100dp"
				    android:text="Você é a favor do projeto que inclui os atos de corrupção na Lei dos Crimes Hediondos, que aplica punições mais severas aos condenados?"
				    android:padding="14dp"
				    android:gravity="center_vertical|left"
				    android:textColor="#FFF"
				    android:textSize="18dp"
				    android:background="@drawable/blue_grad"
				/>
			</FrameLayout>
		</LinearLayout>
	</ScrollView>
	
    <LinearLayout 
    	android:layout_width="1px"
	    android:layout_height="fill_parent"
	    android:background="#BBB"
	/>
	
	<LinearLayout 
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:layout_weight="1">
		<LinearLayout 
			android:id="@+id/result_layout"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical">
			
			<LinearLayout 
				android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:padding="20dp"
			    android:gravity="center"
				android:background="#CCC"
				android:layout_weight="1">
			    <LinearLayout
			    	android:id="@+id/chart_layout"
			    	android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:orientation="vertical"
			    	android:gravity="center">
			    </LinearLayout>
			    <LinearLayout
			    	android:id="@+id/chart_layout"
			    	android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:orientation="horizontal"
			    	android:gravity="center">
			    	<TextView 
			    		android:id="@+id/yes_percentage"
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:text="35,2%"
			    		android:gravity="center"
			    		android:textSize="18dp"
			    		android:textStyle="bold"
			    		android:textColor="#008500"
			    		android:paddingRight="10dp"
			    	/>
			    	<TextView
			    		android:id="@+id/no_percentage" 
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:text="64,8%"
			    		android:gravity="center"
			    		android:textSize="18dp"
			    		android:textStyle="bold"
			    		android:textColor="#A60400"
			    		android:paddingLeft="10dp"
			    	/>
			    </LinearLayout>
			</LinearLayout>
			
			<LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="2px"
				android:background="#FFF">
			</LinearLayout>
			
			<LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="#AAA"
				android:orientation="horizontal"
				android:padding="5dp">
				<TextView 
					android:id="@+id/you_voted_prefix"
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"
					android:text="Você votou "
		    		android:textSize="16dp"
		    		android:textColor="#FFF"
		    		android:gravity="bottom|left"
				/>
				<TextView 
					android:id="@+id/you_voted_value"
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"
					android:gravity="bottom|left"
					android:layout_weight="1"
					android:text="SIM"
		    		android:textSize="16dp"
		    		android:textColor="#333"
				/>
				<TextView
					android:id="@+id/total_votes_value" 
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:gravity="bottom|right"
					android:text="1297"
		    		android:textSize="16dp"
		    		android:textColor="#333"
				/>
				<TextView
					android:id="@+id/total_votes_suffix" 
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"
					android:gravity="bottom|right"
					android:text=" votos"
		    		android:textSize="16dp"
		    		android:textColor="#FFF"
				/>
			</LinearLayout>
		</LinearLayout>
		
		<LinearLayout 
	    	android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="2dp"
		    android:background="#FFF">
		</LinearLayout>
		
		<ScrollView
			android:id="@+id/yes_no_bars" 
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent">
		    <LinearLayout 
		    	android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent">
			    <LinearLayout 
			    	android:orientation="horizontal"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:background="@drawable/gray_grad"
				    android:gravity="center_vertical|left">
				    <CheckBox
				    	android:id="@+id/yes_btn"
				    	android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	android:layout_margin="12dp"/>
				    <TextView
				    	android:id="@+id/yes_btn_label" 
				    	android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	android:text="Sim"
				    	android:textSize="22dp"
				    	android:textColor="#333"/>
			    </LinearLayout>
			    
				<LinearLayout 
			    	android:orientation="vertical"
				    android:layout_width="fill_parent"
				    android:layout_height="2dp"
				    android:background="#FFF">
				</LinearLayout>
			
			    <LinearLayout 
			    	android:orientation="horizontal"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:background="@drawable/gray_grad"
				    android:gravity="center_vertical|left">
				    <CheckBox
				    	android:id="@+id/no_btn"
				    	android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	android:layout_margin="12dp"/>
				    <TextView 
				    	android:id="@+id/no_btn_label"
				    	android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	android:text="Não"
				    	android:textSize="22dp"
				    	android:textColor="#333"/>
			    </LinearLayout>
		    </LinearLayout>
	    </ScrollView>
	</LinearLayout>
</LinearLayout>